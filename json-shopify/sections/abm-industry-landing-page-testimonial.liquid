{% schema %}
  {
    "name": "Testimonials Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "testimonial-01-img",
        "label": "Testimonial 01 photo"
      },
      {
        "type": "text",
        "id": "testimonial-01-img-alt-text",
        "label": "Testimonial 01 alt text"
      },
      {
        "type": "text",
        "id": "testimonial-01",
        "label": "Testimonial 01",
        "default": "Lorem ipsum salat dolor ipsum ut perspiciatis unde omnis iste natus error sit voluptatem accusantium."
      },
      {
        "type": "text",
        "id": "testimonial-01-attribute",
        "label": "Testimonial 01 attrubute",
        "default": "- Lorem ipsum salat dolor ipsum ut."
      }
    ],
    "presets": [
      {
        "name": "ABM LP testimonials"
      }
    ]
  }
{% endschema %}