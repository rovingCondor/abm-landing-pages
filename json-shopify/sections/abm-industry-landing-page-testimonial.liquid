<section class="testimonials | section-spacer section-container-gray-200">

    <div class="testimonial-content-container | content-container">
        <div class="img-container">
            <img src="{{ section.settings.testimonial-01-img | image_url: width: '800' }}" alt="{{ section.settings.testimonial-01-img-alt-text }}">
        </div>
        <div class="testimonial-contents">
            <h3 class="testimonial-quote">{{ section.settings.testimonial-01 }}</h3>
            <p class="testimonial-quote-attribute">{{ section.settings.testimonial-01-attribute }}</p>
        </div>

    </div>

    <!-- Navigation -->
    <!-- <div class="testimonial-nav | content-container"> [ ] </div> -->

</section>
